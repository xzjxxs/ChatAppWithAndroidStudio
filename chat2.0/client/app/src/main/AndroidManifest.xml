<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.edu.cuhk.ie.iems5722.group33">
    <!--    ask for permission to perform HTTP requests to a web server-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cuhk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cuhk_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloWorld"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage = "true">
        <activity
            android:name="hk.edu.cuhk.ie.iems5722.group33.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hk.edu.cuhk.ie.iems5722.group33.ChatActivity"
            android:label="Chatroom" />
        <activity
            android:name="hk.edu.cuhk.ie.iems5722.group33.MainActivity"
            android:label="Main" />
        <activity android:name="hk.edu.cuhk.ie.iems5722.group33.AddFriendsActivity"
            android:parentActivityName="hk.edu.cuhk.ie.iems5722.group33.MainActivity" />
        <activity
            android:name="hk.edu.cuhk.ie.iems5722.group33.FileActivity"
            android:label="File"
            android:parentActivityName="hk.edu.cuhk.ie.iems5722.group33.MainActivity" />

        <!--        implement and extend FirebaseMessagingService-->
        <service
            android:name="hk.edu.cuhk.ie.iems5722.group33.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>